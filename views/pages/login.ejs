<%- include('../partials/head.ejs')%>

<%- include('../partials/header.ejs')%>

<div class="container wrapper">
    <div class="row">
        <div class="col-10">
            <form action="/user/login" method="POST">
                <div class="form-group my-2">
                    <label for="email">Email : </label>
                    <input type="email" name="email" id="email" class='form-control <%= errors.email?'is-invalid':''%>'>
                    <div class="invalid-feedback"><%= errors.email%></div>
                </div>
                <div class="form-group my-2">
                    <label for="password">Password : </label>
                    <input type="password" name="password" id="password" class='form-control <%= errors.password?'is-invalid':''%>'>
                    <div class="invalid-feedback"><%= errors.password%></div>
                </div>
                <input type="submit" value="Login" class='btn btn-primary mt-2'>
            </form>
            <p class="my-2">Don't have an account?<a href="/user/register">Create One</a></p>
        </div>
    </div>
</div>


<%- include('../partials/footer.ejs')%>
</body>
</html>